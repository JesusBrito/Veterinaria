<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jesus.veterinaria.Clientes"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Cabecera-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/verde_azulado"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">
            <!--Boton REGRESAR-->
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginRight="40dp">
                <ImageButton
                    android:id="@+id/activityClientesBtnRegresar"
                    android:layout_marginLeft="15dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:background="@mipmap/regresar"/>
            </LinearLayout>
            <!--Boton REGRESAR-->
            <!--TEXTO-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Veterinaria"
                    android:textSize="25dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>
            <!--TEXTO-->
            <!--Boton HOME-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right">
                <ImageButton
                    android:id="@+id/activityClientesBtnHome"
                    android:layout_marginRight="15dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/home"/>
            </LinearLayout>
            <!--Boton HOME-->
        </LinearLayout>
        <!--Fin Cabecera-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Clientes"
                android:textSize="35dp"
                android:textColor="@color/verde_azulado"/>
            <ImageButton
                android:layout_marginLeft="60dp"
                android:id="@+id/principalClientesAdd"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_gravity="right"
                android:background="@mipmap/imgplus">
            </ImageButton>
        </LinearLayout>

        <!--Busqueda-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">
            <!--TEXTO-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/activityClientestxtRfc"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:hint="Rfc"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    android:gravity="left"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <!--TEXTO-->
            <!--Boton BUSCAR-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right">
                <Button
                    android:id="@+id/activityClientesBtnBuscar"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/verde_azulado"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:text="Buscar"/>
            </LinearLayout>
            <!--Boton BUSCAR-->
        </LinearLayout>
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>
</LinearLayout>
