<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jesus.veterinaria.Modificar_servicio">
    <!--Cabecera-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde_azulado"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <!--Boton REGRESAR-->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginRight="40dp">
            <ImageButton
                android:id="@+id/activityDetalleServicioBtnRegresar"
                android:layout_marginLeft="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@mipmap/regresar"/>
        </LinearLayout>
        <!--Boton REGRESAR-->
        <!--TEXTO-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Veterinaria"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>
        <!--TEXTO-->
        <!--Boton HOME-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right">
            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/activityDetalleServicioBtnHome"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@mipmap/home"/>
        </LinearLayout>
        <!--Boton HOME-->
    </LinearLayout>
    <!--Fin Cabecera-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modificar servicio"
                    android:id="@+id/activityDetalleServicioChEditar"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:text="Clave:"
                    android:gravity="bottom"/>
                <EditText
                    android:gravity="bottom"
                    android:id="@+id/detalle_servicio_txt_cve"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:text="Nombre:"
                    android:gravity="bottom"/>
                <EditText
                    android:id="@+id/detalle_servicio_txt_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Precio:"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/detalle_servicio_txt_precio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/activityDetalleServicioBtnGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/verde_azulado"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:text="Guardar"
                    android:enabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
