<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Cabecera-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde_azulado"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <!--Boton REGRESAR-->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginRight="40dp">
            <ImageButton
                android:id="@+id/activityRegistroClientesBtnRegresar"
                android:layout_marginLeft="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@mipmap/regresar"
                />
        </LinearLayout>
        <!--Boton REGRESAR-->
        <!--TEXTO-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Veterinaria"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>
        <!--TEXTO-->
        <!--Boton HOME-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right">
            <ImageButton
                android:id="@+id/activityRegistroClientesBtnHome"
                android:layout_marginRight="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@mipmap/home"/>
        </LinearLayout>
        <!--Boton HOME-->
    </LinearLayout>
    <!--Fin Cabecera-->
    <ScrollView
        android:id="@+id/miScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro de cita"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginRight="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Mascota: " />
                <Spinner
                    android:id="@+id/spinnerMascotas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginRight="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="MÃ©dico: "/>

                <Spinner
                    android:id="@+id/spinnerMedicos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Servicios"
                    android:textColor="@color/verde_azulado"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="28dp"
                    android:layout_marginLeft="28dp"
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:background="@color/azul"/>
            </LinearLayout>


            <!--Servicios-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="Servicio: "/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="55dp">
                    <Spinner
                        android:id="@+id/spinnerServicios"
                        android:layout_width="152dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left"
                    android:layout_marginRight="32dp">
                        <ImageButton
                        android:id="@+id/principalServicioAdd"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@mipmap/imgplus" />
                </LinearLayout>
            </LinearLayout>
            <!--Fin Servicios-->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/activity_registro_cita_btnCancelar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/cancel" />

                <TextView
                    android:layout_width="115dp"
                    android:layout_height="20dp" />

                <ImageButton
                    android:id="@+id/activity_registro_cita_btnGuardar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/ok" />
            </LinearLayout>
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
