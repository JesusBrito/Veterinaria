<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jesus.veterinaria.Registro_cita"
    android:orientation="vertical"
    android:weightSum="1">

    <!--Cabecera-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde_azulado"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <!--Boton REGRESAR-->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginRight="40dp">
            <ImageButton
                android:id="@+id/activityRegistroClientesBtnRegresar"
                android:layout_marginLeft="15dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@mipmap/regresar"/>
        </LinearLayout>
        <!--Boton REGRESAR-->
        <!--TEXTO-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Veterinaria"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>
        <!--TEXTO-->
        <!--Boton HOME-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right">
            <ImageButton
                android:id="@+id/activityRegistroClientesBtnHome"
                android:layout_marginRight="15dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@mipmap/home"/>
        </LinearLayout>
        <!--Boton HOME-->
    </LinearLayout>
    <!--Fin Cabecera-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro de cita"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp">
                <TextView
                    android:id="@+id/activity_registro_cliente_txtDirec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="0"
                    android:hint="Nombre de la mascota"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Servicios"
                    android:textSize="45dp"
                    android:textColor="@color/verde_azulado"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <Spinner
                    android:layout_width="235dp"
                    android:layout_height="50dp"></Spinner>
                <ImageButton
                    android:layout_marginLeft="60dp"
                    android:id="@+id/principalServicioAdd"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_gravity="right"
                    android:background="@mipmap/imgplus">
                </ImageButton>
            </LinearLayout>
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_weight="0.22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="15dp">
                <Button
                    android:id="@+id/activity_registro_cliente_btnCancelar"
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:background="@android:color/darker_gray"
                    android:ems="20"
                    android:text="Cancelar"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="20dp" />

                <Button
                    android:id="@+id/activity_registro_cliente_btnGuardar"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/verde_azulado"
                    android:ems="20"
                    android:textSize="20dp"
                    android:text="Guardar"
                    android:textColor="@android:color/white"
                    android:layout_weight="0.72" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
