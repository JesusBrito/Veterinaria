<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:configChanges="orientation|keyboardHidden"
        android:orientation="vertical">
        <!--Cabecera-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/verde_azulado"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">
            <!--Boton REGRESAR-->
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginRight="40dp">
                <ImageButton
                    android:id="@+id/activityRegistroMascotasBtnRegresar"
                    android:layout_marginLeft="15dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/regresar"/>
            </LinearLayout>
            <!--Boton REGRESAR-->
            <!--TEXTO-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Veterinaria"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:gravity="center"/>
            </LinearLayout>
            <!--TEXTO-->
            <!--Boton HOME-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right">
                <ImageButton
                    android:layout_marginRight="15dp"
                    android:id="@+id/activityRegistroMascotasBtnHome"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/home"/>
            </LinearLayout>
            <!--Boton HOME-->
        </LinearLayout>
        <!--Fin Cabecera-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Mascota"
                android:textSize="30dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="15dp"
            android:layout_height="25dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="15dp"
                android:layout_height="3dp" />
            <ImageButton
                android:id="@+id/activity_mascota_btn_img_cargar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/dog"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/activity_registro_mascota_txtNom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="Nombre"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/activity_registro_mascota_txtespecie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Especie"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/activity_registro_cliente_btnCamara"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:onClick="btnCamara_click" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="8dp"
                android:layout_height="20dp" />
            <EditText
                android:id="@+id/activity_registro_mascota_txtraza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="Raza"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="8dp"
                android:layout_height="20dp" />
            <EditText
                android:id="@+id/activity_registro_mascota_txtRfcCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="Rfc cliente"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="8dp"
                android:layout_height="20dp" />
            <EditText
                android:id="@+id/activity_registro_mascota_txtcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="Color"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="11dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tamaño"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/activity_registro_mascota_spTamanio"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="8dp"
                android:layout_height="20dp" />
            <EditText
                android:id="@+id/activity_registro_mascota_txtsena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="Seña Particular"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="8dp"
                android:layout_height="20dp" />
            <EditText
                android:id="@+id/activity_registro_mascota_txtNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="Fecha de nacimiento"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="10dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/activity_registro_mascota_btnCancelar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:ems="20"
                android:text="Cancelar"
                android:textColor="@android:color/white"
                android:onClick="btnCancel_click"
                android:textSize="16dp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/activity_registro_mascota_btnGuardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/verde_azulado"
                android:ems="20"
                android:onClick="btnGuardar_click"
                android:textSize="16dp"
                android:text="Guardar"
                android:textColor="@android:color/white"
                android:layout_weight="0.72" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
